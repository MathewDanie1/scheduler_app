<h1>Listing courses</h1>
<div class="container">
<table>
 <% @courses.each do |course| %>
 <tr>
   <td><%= course.name %></td>
   <td><%= course.program.name %></td> 
   <td>Campus: <%= course.campus.name %></td>  
   <td><%= link_to 'Show', course if can? :show , course %></td>
   <td><%= link_to 'Edit', edit_course_path(course) if can? :edit , course %></td>
   <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy , course %></td>
  </tr> 
 <% end %>
</table>
<br><br><br>

<% if can? :create , Course %>
<%= link_to 'Add new course...', new_course_path %>
<% end %>
</div>

