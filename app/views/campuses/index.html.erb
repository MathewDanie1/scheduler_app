<h1>Listing campuses</h1>
<div class="container">
<table>
<% @campuses.each do |campus| %>
  <tr>
    <td><%= campus.name %></td>
    <td><%= link_to 'Show', campus if can? :show , campus %></td>
    <td><%= link_to 'Edit', edit_campus_path(campus) if can? :edit , campus %></td>
    <td><%= link_to 'Destroy', campus, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy , campus %></td>
  </tr>
<% end %>
</table>

<br><br><br>

<% if can? :create , Campus %>
<%= link_to 'New campus', new_campus_path %>
<% end %>
</div>
