<%= form_for(@booking) do |f| %>

<% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@booking.errors.count, "error")} prohibited this booking from being saved:" %>
      </h2>
      <ul>
        <% @booking.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="field">
    <%= f.label :cohort %></b>
    <%= f.select :cohort_id, options_from_collection_for_select(Cohort.all, "id", "name") %>
  </div>
  <div class="field">
    <%= f.label :classroom %></b>
    <%= f.select :classroom_id, options_from_collection_for_select(Classroom.all, "id", "name") %>
  </div>
  <div class="field">
    <%= f.label :start_date %></b>
   <%= f.date_select :start_date, start_year: (Date.today.year - 5), order: [:year, :month, :day] %>
  </div>  
  <div class="field">
    <%= f.label :end_date %></b>
    <%= f.date_select :end_date, start_year: (Date.today.year - 5), order: [:year, :month, :day] %>
  </div>  
  <div class="actions">
    <%= f.submit %>
  </div>
 <% end %> 
</div>  
